rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // テンプレートファイル（Excelファイル）- 誰でも読み取り可能
    match /templates/excel/{fileName} {
      allow read: if true;  // 誰でもダウンロード可能
      allow write: if false; // 管理者のみアップロード可能（コンソールから）
    }
    
    // 一般的なテンプレートファイル
    match /templates/{fileName} {
      allow read: if true;  // 誰でもダウンロード可能
      allow write: if false; // 管理者のみアップロード可能（コンソールから）
    }
    
    // アップロードされたファイル
    match /uploads/{type}/{fileName} {
      allow read, write: if true; // 開発環境では全許可
    }
    
    // 公開ドキュメント
    match /public/{fileName} {
      allow read: if true; // 誰でも読み取り可能
      allow write: if false; // 書き込み不可
    }
    
    // その他のファイル（デフォルト拒否）
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
